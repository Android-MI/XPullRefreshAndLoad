<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mi.widget.xpullrefreshview">
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.PullableExpandableListViewActivity"
            android:label="@string/expandable_listview" />
        <activity
            android:name=".activity.PullableGridViewActivity"
            android:label="@string/grid_view" />
        <activity
            android:name=".activity.PullableListViewActivity"
            android:label="@string/listview" />
        <activity
            android:name=".activity.PullableScrollViewActivity"
            android:label="@string/scrollview" />
        <activity
            android:name=".activity.PullableWebViewActivity"
            android:label="@string/webview" />
        <activity
            android:name=".activity.PullableImageViewActivity"
            android:label="@string/imageview" />
        <activity
            android:name=".activity.PullableTextViewActivity"
            android:label="@string/textview" />
        <activity
            android:name=".activity.PullableGifActivity"
            android:label="@string/gif_listview" />
        <activity
            android:name=".activity.PullableRecyclerViewActivity"
            android:label="@string/recyclerview" />

    </application>

</manifest>